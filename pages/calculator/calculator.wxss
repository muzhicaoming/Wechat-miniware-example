/** pages/calculator/calculator.wxss - 正宗九宫格布局 **/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.calculator {
  width: 100%;
  max-width: 600rpx;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 32rpx;
  padding: 32rpx;
  backdrop-filter: blur(20rpx);
  box-sizing: border-box;
}

.display {
  width: 100%;
  min-height: 160rpx;
  background-color: rgba(255, 255, 255, 0.1);
  color: #fff;
  font-size: 72rpx;
  font-weight: 300;
  text-align: right;
  padding: 32rpx;
  line-height: 1.2;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-sizing: border-box;
  word-break: break-all;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
}

.buttons {
  width: 100%;
}

.button-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.button-row:last-child {
  margin-bottom: 0;
}

.btn {
  width: 136rpx; /* 精确设置按钮宽度 */
  height: 136rpx;
  border-radius: 68rpx;
  font-size: 44rpx;
  font-weight: 500;
  border: none;
  line-height: 136rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  transition: all 0.15s;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

/* 特殊按钮样式 */
.btn-number {
  background-color: rgba(58, 58, 60, 0.9);
  color: #fff;
}

.btn-number:active {
  background-color: rgba(88, 88, 90, 0.9);
  transform: scale(0.96);
}

.btn-operator {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: 600;
}

.btn-operator:active {
  background: linear-gradient(135deg, #5568d3 0%, #63408b 100%);
  transform: scale(0.96);
}

.btn-function {
  background-color: rgba(165, 165, 165, 0.9);
  color: #000;
  font-weight: 600;
}

.btn-function:active {
  background-color: rgba(200, 200, 200, 0.9);
  transform: scale(0.96);
}

.btn-equals {
  background: linear-gradient(135deg, #ff6b9d 0%, #ffa07a 100%);
  color: #fff;
  font-weight: 600;
}

.btn-equals:active {
  background: linear-gradient(135deg, #e55a8a 0%, #ff8c69 100%);
  transform: scale(0.96);
}

/* 特殊布局样式 */
.button-row-wrapper {
  position: relative;
  display: flex;
  margin-bottom: 16rpx;
}

.left-buttons {
  display: flex;
  flex-direction: column;
  width: calc(100% - 152rpx); /* 留出等号的位置 */
  margin-right: 16rpx;
}

/* 等号按钮 - 占据右侧两行的高度 */
.btn-equals-tall {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 136rpx !important;
  height: auto !important;
  border-radius: 68rpx;
  font-size: 56rpx;
  font-weight: 600;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 0按钮占两倍宽度 */
.btn-zero {
  width: 288rpx !important; /* 2个按钮宽度 + 1个间隙 */
  text-align: left;
  padding-left: 68rpx;
  box-sizing: border-box;
}

/* 修复布局 - 确保第4列对齐 */
.button-row {
  display: flex;
  justify-content: space-between;
}

.button-row:last-child {
  margin-bottom: 0;
}

/* 确保第4列按钮对齐 */
.button-row .btn:nth-child(1) { margin-left: 0; }
.button-row .btn:nth-child(2) { margin-left: 16rpx; }
.button-row .btn:nth-child(3) { margin-left: 16rpx; }

/* 移动端适配 */
@media (max-width: 375px) {
  .btn {
    width: 120rpx;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 40rpx;
  }

  .btn-equals-tall {
    width: 120rpx !important;
  }

  .btn-zero {
    width: 256rpx !important;
    padding-left: 60rpx;
  }
}

/* 兼容旧的布局 */
.btn-spacer {
  display: none;
}