/* pages/calculator/calculator.wxss */
.calculator {
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.display {
  width: 100%;
  height: 120rpx;
  background-color: #1A1A1A;
  color: #fff;
  font-size: 48rpx;
  text-align: right;
  padding: 0 30rpx;
  line-height: 120rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-sizing: border-box;
  word-break: break-all;
}

.buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  position: relative;
}

.button-row {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  width: 100%;
  position: relative;
}

.btn {
  flex: 1;
  height: 100rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 0;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

.btn-number {
  background-color: #F0F0F0;
  color: #333;
}

.btn-number:active {
  background-color: #E0E0E0;
}

.btn-operator {
  background-color: #4A90E2;
  color: #fff;
}

.btn-operator:active {
  background-color: #357ABD;
}

.btn-clear {
  background-color: #FF6B6B;
  color: #fff;
}

.btn-clear:active {
  background-color: #E55555;
}

.btn-equals {
  background-color: #50C878;
  color: #fff;
}

.btn-equals:active {
  background-color: #45B869;
}

.btn-equals-tall {
  position: absolute;
  right: 0;
  height: 220rpx;
  top: 200rpx;
}

.btn-zero {
  flex: 2;
}

.btn-placeholder {
  flex: 1;
  height: 100rpx;
  visibility: hidden;
}
