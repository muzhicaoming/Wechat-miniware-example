/* pages/calculator/calculator.wxss */
.calculator {
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.display {
  width: 100%;
  height: 120rpx;
  background-color: #1A1A1A;
  color: #fff;
  font-size: 48rpx;
  text-align: right;
  padding: 0 30rpx;
  line-height: 120rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-sizing: border-box;
  word-break: break-all;
}

.buttons {
  width: 100%;
}

.button-row {
  display: flex;
  width: 100%;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.button-row:last-child {
  margin-bottom: 0;
}

.button-row-wrapper {
  position: relative;
  width: 100%;
  margin-bottom: 20rpx;
}

.button-row-wrapper:last-child {
  margin-bottom: 0;
}

.button-row-wrapper .button-row {
  margin-bottom: 20rpx;
  width: 100%;
}

.button-row-wrapper .button-row:last-child {
  margin-bottom: 0;
}

.btn-spacer {
  flex: 1;
  height: 100rpx;
}

.btn {
  flex: 1;
  height: 100rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  line-height: 100rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  transition: all 0.2s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-number {
  background-color: #F5F5F5;
  color: #333;
}

.btn-number:active {
  background-color: #E8E8E8;
  transform: scale(0.95);
}

.btn-operator {
  background-color: #4A90E2;
  color: #fff;
  font-weight: 600;
}

.btn-operator:active {
  background-color: #357ABD;
  transform: scale(0.95);
}

.btn-clear {
  background-color: #FF6B6B;
  color: #fff;
  font-weight: 600;
}

.btn-clear:active {
  background-color: #E55555;
  transform: scale(0.95);
}

.btn-equals {
  background-color: #50C878;
  color: #fff;
  font-weight: 600;
}

.btn-equals:active {
  background-color: #45B869;
  transform: scale(0.95);
}

.btn-plus-tall {
  position: absolute;
  right: 0;
  top: 0;
  width: calc(25% - 15rpx);
  height: 220rpx;
  font-size: 48rpx;
  font-weight: 700;
  line-height: 220rpx;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
  border-radius: 12rpx;
}

.btn-plus-tall:active {
  transform: scale(0.97);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.4);
}

.btn-equals-tall {
  position: absolute;
  right: 0;
  top: 0;
  width: calc(25% - 15rpx);
  height: 220rpx;
  font-size: 48rpx;
  font-weight: 700;
  line-height: 220rpx;
  box-shadow: 0 4rpx 12rpx rgba(80, 200, 120, 0.3);
  border-radius: 12rpx;
}

.btn-equals-tall:active {
  transform: scale(0.97);
  box-shadow: 0 2rpx 8rpx rgba(80, 200, 120, 0.4);
}

.btn-zero {
  flex: 2;
}
