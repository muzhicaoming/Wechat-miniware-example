/* pages/calculator/calculator.wxss - iOS Style */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.calculator {
  width: 100%;
  max-width: 680rpx;
  background-color: rgba(255, 255, 255, 0.05);
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  box-sizing: border-box;
}

.display {
  width: 100%;
  min-height: 160rpx;
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
  font-size: 72rpx;
  font-weight: 300;
  text-align: right;
  padding: 32rpx 40rpx;
  line-height: 1.2;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
  box-sizing: border-box;
  word-break: break-all;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
}

.buttons {
  width: 100%;
}

.button-row {
  display: flex;
  width: 100%;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.button-row:last-child {
  margin-bottom: 0;
}

.button-row-wrapper {
  position: relative;
  width: 100%;
  margin-bottom: 16rpx;
}

.button-row-wrapper:last-child {
  margin-bottom: 0;
}

.button-row-wrapper .button-row {
  margin-bottom: 16rpx;
  width: 100%;
}

.button-row-wrapper .button-row:last-child {
  margin-bottom: 0;
}

.btn-spacer {
  flex: 1;
  height: 136rpx;
}

.btn {
  flex: 1;
  height: 136rpx;
  border-radius: 68rpx;
  font-size: 44rpx;
  font-weight: 400;
  border: none;
  line-height: 136rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  transition: all 0.2s;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.btn-number {
  background-color: rgba(58, 58, 60, 0.9);
  color: #fff;
}

.btn-number:active {
  background-color: rgba(88, 88, 90, 0.9);
  transform: scale(0.96);
}

.btn-operator {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: 500;
}

.btn-operator:active {
  background: linear-gradient(135deg, #5568d3 0%, #63408b 100%);
  transform: scale(0.96);
}

.btn-function {
  background-color: rgba(165, 165, 165, 0.9);
  color: #000;
  font-weight: 500;
}

.btn-function:active {
  background-color: rgba(200, 200, 200, 0.9);
  transform: scale(0.96);
}

.btn-equals {
  background: linear-gradient(135deg, #ff6b9d 0%, #ffa07a 100%);
  color: #fff;
  font-weight: 600;
}

.btn-equals:active {
  background: linear-gradient(135deg, #e55a8a 0%, #ff8c69 100%);
  transform: scale(0.96);
}

.btn-equals-tall {
  position: absolute;
  right: 0;
  top: 0;
  width: 136rpx;
  height: 288rpx;
  border-radius: 68rpx;
  font-size: 56rpx;
  font-weight: 600;
  line-height: 288rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.4);
}

.btn-equals-tall:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.5);
}

.btn-zero {
  flex: 2;
  text-align: left;
  padding-left: 56rpx;
}
