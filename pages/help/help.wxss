/* pages/help/help.wxss */
.help-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.help-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.help-header {
  margin-bottom: 20rpx;
}

.help-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #4A90E2;
}

.help-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-line;
}

.contact-info {
  text-align: center;
  padding: 20rpx 0;
}

.contact-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.contact-text {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
}
