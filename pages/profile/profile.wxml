<!--pages/profile/profile.wxml-->
<view class="container">
  <view class="card profile-card">
    <view class="avatar-container">
      <image 
        class="avatar" 
        src="{{userInfo.avatar || '/images/default-avatar.png'}}"
        mode="aspectFill"
      />
    </view>
    <view class="user-info">
      <text class="username">{{userInfo.nickname || userInfo.username}}</text>
      <text class="user-id">用户名: {{userInfo.username}}</text>
    </view>
  </view>

  <view class="card" wx:if="{{isLoggedIn}}">
    <view class="info-item">
      <text class="info-label">登录时间</text>
      <text class="info-value">{{loginTime}}</text>
    </view>
    <button class="btn" bindtap="handleEdit">编辑信息</button>
  </view>

  <view class="card" wx:else>
    <text class="tip-text">您还未登录，请先登录</text>
    <button class="btn" bindtap="goToLogin">去登录</button>
  </view>
</view>
