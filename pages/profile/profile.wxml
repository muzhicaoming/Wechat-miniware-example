<!--pages/profile/profile.wxml-->
<view class="container">
  <view class="card profile-card">
    <view class="avatar-container">
      <image 
        class="avatar" 
        src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}"
        mode="aspectFill"
      />
    </view>
    <view class="user-info">
      <text class="username">{{userInfo.nickName || '未登录'}}</text>
      <text class="user-location" wx:if="{{userInfo.province || userInfo.city}}">
        {{userInfo.province}}{{userInfo.city}}
      </text>
    </view>
  </view>

  <view class="card" wx:if="{{isLoggedIn}}">
    <view class="info-item" wx:if="{{userInfo.country}}">
      <text class="info-label">国家/地区</text>
      <text class="info-value">{{userInfo.country}}</text>
    </view>
    <view class="info-item" wx:if="{{userInfo.province}}">
      <text class="info-label">省份</text>
      <text class="info-value">{{userInfo.province}}</text>
    </view>
    <view class="info-item" wx:if="{{userInfo.city}}">
      <text class="info-label">城市</text>
      <text class="info-value">{{userInfo.city}}</text>
    </view>
    <view class="info-item" wx:if="{{loginTime}}">
      <text class="info-label">登录时间</text>
      <text class="info-value">{{loginTime}}</text>
    </view>
  </view>

  <view class="card" wx:else>
    <text class="tip-text">您还未登录，请先登录</text>
    <button class="btn" bindtap="goToLogin">去登录</button>
  </view>
</view>
