/* pages/login/login.wxss */
.card {
  margin-top: 40rpx;
}

.title {
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.input {
  background-color: #FAFAFA;
  padding: 28rpx 20rpx;
  font-size: 30rpx;
  line-height: 1.5;
  min-height: 88rpx;
  margin: 24rpx 0;
  box-sizing: border-box;
  vertical-align: middle;
  display: flex;
  align-items: center;
}

.input::placeholder {
  color: #999;
  line-height: 1.5;
}

.btn {
  margin-top: 40rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.btn-secondary {
  margin-top: 20rpx;
}

.subtitle {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  padding: 20rpx 0;
}
