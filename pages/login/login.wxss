/* pages/login/login.wxss */
.card {
  margin-top: 40rpx;
}

.title {
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

/* 用户信息卡片 */
.user-info-card {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #4A90E2;
  margin-right: 30rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.location {
  font-size: 26rpx;
  color: #999;
}

/* 登录提示 */
.login-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0 40rpx;
}

.tip-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
}

/* 微信 logo 容器 */
.wechat-logo-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

.wechat-logo-bg {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.15;
  filter: blur(2rpx);
  animation: float 4s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

/* 登录头部 */
.login-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.login-header .title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.login-header .subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 微信登录按钮 */
.btn-wechat {
  background: linear-gradient(135deg, #07C160 0%, #06AD56 100%);
  color: #fff;
  margin-top: 40rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  height: 88rpx;
  padding: 0 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3);
}

.btn-wechat:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-wechat-icon {
  width: 40rpx;
  height: 40rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.btn-text {
  font-size: 32rpx;
}

/* 头像预览容器样式 */
.avatar-preview {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  padding: 10rpx;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 8rpx;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.avatar-preview:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.avatar-preview-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
  margin-left: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.avatar-status {
  font-size: 24rpx;
  margin-top: 8rpx;
}

.login-desc {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  text-align: center;
}

.login-desc text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

.btn {
  margin-top: 40rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.btn-secondary {
  margin-top: 20rpx;
}

.subtitle {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  padding: 20rpx 0;
}
