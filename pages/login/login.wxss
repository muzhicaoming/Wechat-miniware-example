/* pages/login/login.wxss */
.card {
  margin-top: 40rpx;
}

.title {
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

/* 用户信息卡片 */
.user-info-card {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #4A90E2;
  margin-right: 30rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.location {
  font-size: 26rpx;
  color: #999;
}

/* 登录提示 */
.login-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0 40rpx;
}

.tip-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
}

/* 微信登录按钮 */
.btn-wechat {
  background: linear-gradient(135deg, #07C160 0%, #06AD56 100%);
  color: #fff;
  margin-top: 40rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.btn-wechat:active {
  opacity: 0.9;
}

.btn-icon {
  font-size: 32rpx;
}

.login-desc {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  text-align: center;
}

.login-desc text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

.btn {
  margin-top: 40rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.btn-secondary {
  margin-top: 20rpx;
}

.subtitle {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  padding: 20rpx 0;
}
