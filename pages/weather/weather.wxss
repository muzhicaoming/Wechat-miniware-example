/* pages/weather/weather.wxss */
.input-group {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.input {
  flex: 1;
}

.weather-header {
  text-align: center;
  padding: 40rpx 0;
  border-bottom: 2rpx solid #F0F0F0;
  margin-bottom: 30rpx;
}

.city-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.weather-temp {
  display: block;
  font-size: 72rpx;
  font-weight: bold;
  color: #4A90E2;
}

.weather-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.weather-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.weather-label {
  font-size: 28rpx;
  color: #666;
}

.weather-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.city-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.city-tag {
  padding: 16rpx 32rpx;
  background-color: #F0F0F0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.city-tag.active {
  background-color: #4A90E2;
  color: #fff;
}

.tip {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}
